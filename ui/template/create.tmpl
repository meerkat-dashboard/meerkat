{{ define "body" }}
{{ template "nav" }}
<main class="container">
<h3>Create a new dashboard</h3>
<hr>
<form method="POST">
	<div class="form-group mb-3">
		<label class="form-label" for="title">Name</label>
		<input class="form-control" type="text" id="title" name="title" minlength="4" placeholder="Dashboard name..." required>
		<label class="form-label" for="description">Description</label>
		<input class="form-control" type="text" id="description" name="description" minlength="10" placeholder="Dashboard description...">
		<label class="form-label" for="folder">Folder</label>
		<input class="form-control" type="text" id="folder" name="folder" minlength="4" placeholder="Dashboard Folder">
	</div>
	<button class="btn btn-primary" type="submit">
		Create
	</button>
</form>
</main>
{{ end }}
