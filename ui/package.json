{
  "type": "module",
  "scripts": {
    "dev": "esbuild src/editor.jsx src/viewer.jsx --bundle --jsx-factory=h --outdir=dist --watch",
    "build": "esbuild src/editor.jsx src/viewer.jsx --bundle --jsx-factory=h --outdir=dist --minify",
    "test": "node --test",
    "lint": "prettier -w src && eslint src"
  },
  "license": "AGPL-3.0-or-later",
  "author": "Matthew Streatfield (https://github.com/StreatCodes)",
  "dependencies": {
    "fitty": "^2.3.6",
    "hls.js": "1.3.1",
    "preact": "^10.11.3"
  },
  "devDependencies": {
    "esbuild": "^0.17.14",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-react": "^7.32.1",
    "prettier": "^2.8.3"
  },
  "prettier": {
    "useTabs": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
}
